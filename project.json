{
    "name" : "kickoff",

    "components": [
        "jquery/dist/jquery.min.js"
    ],

    "fonts": [
      "vendor/bower_components/fontawesome/fonts/**/*"
    ],

    "js": {
        "main.js": [
            "resources/assets/js/main.js"
        ],
        "head.js": [
            "vendor/bower_components/html5shiv/dist/html5shiv.js",
            "vendor/bower_components/respond-minmax/dest/respond.min.js"
        ]
    },

    "manifest": "resources/assets/assets.json",

    "dirs": {
        "components": "vendor/bower_components",
        "assets": {
            "root": "resources/assets",
            "sass": "resources/assets/sass",
            "img": "resources/assets/img",
            "js": "resources/assets/js"
        },
        "templates": "resources/views",
        "build": {
            "root": "public",
            "css": "public/css",
            "js": "public/js",
            "img": "public/img"
        }
    }
}